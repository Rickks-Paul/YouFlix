<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/cinza_10" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item android:left="-2dp" android:right="-2dp" android:top="-5dp">
                <shape android:left="-2dp" android:right="-2dp" android:top="-5dp">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="5dp" />
                    <stroke android:width="2dp" android:color="@color/laranja_3" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
