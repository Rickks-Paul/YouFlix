<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:listitem="@layout/item_teste" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:drawableTop="@drawable/ic_home"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:text="@string/inicio"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:theme="@style/AppTheme.Ripple"
            tools:ignore="KeyboardInaccessibleWidget,SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:drawableTop="@drawable/ic_home"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:text="@string/buscar"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:theme="@style/AppTheme.Ripple"
            tools:ignore="KeyboardInaccessibleWidget,SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:drawableTop="@drawable/ic_home"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:text="@string/em_breve"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:theme="@style/AppTheme.Ripple"
            tools:ignore="KeyboardInaccessibleWidget,SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:drawableTop="@drawable/ic_home"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:text="@string/downloads"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:theme="@style/AppTheme.Ripple"
            tools:ignore="KeyboardInaccessibleWidget,SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:drawableTop="@drawable/ic_home"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:text="@string/mais"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:theme="@style/AppTheme.Ripple"
            tools:ignore="KeyboardInaccessibleWidget,SmallSp" />

    </LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/CollapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_a_queima_roupa"
                app:layout_collapseMode="parallax"
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_main_transparent" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/videos"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:text="@string/videos"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/sobre"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:text="@string/sobre"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/minhLista"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:text="@string/minha_lista"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>